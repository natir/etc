setopt interactivecomments

# load antigen
source ~/etc/zsh/antigen.zsh

antigen use oh-my-zsh

zstyle :plugins:ssh-agent identities id_ed25519
zstyle :plugins:ssh-agent pass_path pc/lovelace/ssh_ed25519
antigen bundle natir/zsh-ssh-agent

antigen apply

# dnf alias
alias dnf="sudo dnf"
alias upgrade="dnf upgrade"

# unix cmd alias
alias ls="exa"
alias cat="bat"
alias find="fd"
alias ll="ls -la"
alias rm="rm -i"
alias cp="cp -ip"
alias mv="mv -i"

PATH=$PATH:"/home/pierre/.cargo/bin/":"/home/pierre/.local/bin/":"/home/pierre/.miniconda3/bin":"/home/pierre/bin/"

TERM=xterm-256color

eval "$(starship init zsh)"

bad_network ()
{	
	sudo systemctl stop dnssec-triggerd.service
}

doi2bib ()
{
    curl -H "Accept: application/x-bibtex; charset=utf-8" https://data.crossref.org/${1}
}

# call doi2bib and write result in clipboard
doi2clip ()
{
    doi2bib ${1} | wl-copy
}
